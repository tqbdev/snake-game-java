<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="670.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainMenuController">
   <children>
      <Button id="btnCreateRoom" layoutX="77.0" layoutY="182.0" mnemonicParsing="false"
              onAction="#createRoom"
              prefHeight="57.0" prefWidth="142.0" style="-fx-background-color: cyan; -fx-background-radius: 22px;"
              text="Create Room" textFill="#323232">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button id="btnJoinRoom" layoutX="256.0" layoutY="182.0" mnemonicParsing="false"
              onAction="#joinRoom"
              prefHeight="57.0" prefWidth="142.0" style="-fx-background-color: cyan; -fx-background-radius: 22px;"
              text="Join room" textFill="#323232">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button id="btnQuit" layoutX="440.0" layoutY="182.0" mnemonicParsing="false"
              onAction="#quitGame"
              prefHeight="57.0" prefWidth="142.0" style="-fx-background-color: cyan; -fx-background-radius: 22px;"
              text="Quit" textFill="#323232">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
